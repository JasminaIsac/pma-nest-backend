{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^types/(.*)$": "<rootDir>/types/$1",
    "^test/(.*)$": "<rootDir>/test/$1",
    "^prisma/(.*)$": "<rootDir>/prisma/$1",
    "^scripts/(.*)$": "<rootDir>/scripts/$1"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage"
}